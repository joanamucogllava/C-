// ConsoleApplication2.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

int main()

{
	int number = 0;
	char answer = 'Y';
	int sum = 0;


	while (answer == 'Y')
	{
		std::cout << "Please insert an intiger: \n";
		std::cin >> number;
		sum += number;
		
		std::cout << "Insert Y if you would like to continue or any other key if you would like to stop the program:  ";
		std::cin >> answer;
	
	}

	std::cout << "Your sum is " << sum << endl;
	

    
	system("pause");


}

