// ConsoleApplication1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>

using namespace std;


int main()
{
	const int MIN_NUMBER = 1,
		      MAX_NUMBER = 10;

	int num = MIN_NUMBER;

	cout << " Number Number Squared\n ";
	cout <<"----------------------------\n";

	while (num <= MAX_NUMBER)
	{
		cout << num << "\t\t" << (num * num) << endl;
		num++; 
		}
	system("pause");
    return 0;
}
